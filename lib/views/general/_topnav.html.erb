<ul class="main-menu">
  <li id="logo" >
    <%= link_to "Quesabes.uy",
        frontpage_url,
        { class: logo_class }
        %>
  </li>
  <li class="<%= 'active' if params[:controller] == 'help' %>">
    <%= link_to _("Ayuda"), help_path %>
  </li>
  <li class="<%= 'active' if params[:controller] == 'public_body' || ((params[:controller] == 'request' && !['list'].include?(params[:action]))) %>">
    <%= link_to _("Hacer un pedido"), list_public_bodies_default_path, :class => 'make-request-link' %>
  </li>
  <li class="<%= 'active' if params[:controller] == 'request' && ['list'].include?(params[:action]) %>">
    <%= link_to _("Buscar pedido"), request_list_all_url %>
  </li>
</ul>
